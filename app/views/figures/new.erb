

<h1>Add a New Figure: </h1>

<form action="/figures" method="POST">


	<label>Figure Name:</label>
  	<input type="text" id="figure_name" name="figure[name]">

	<br></br>

<!-- figure with title 
figure with landmark
figure with new title DONE
figure with new landmark 
checkboxes -->

<h3>Landmark: Add an existing landmark, or enter a new one </h3>
	
	<!-- Make a checkbox for all the existing genres then create new,  -->
	<% Landmark.all.each do |landmark| %>
		<label><%= landmark.name %></label>
		<input type="checkbox" id="landmark_<%= landmark.name %>" name="figure[landmark_ids][]" value="<%= landmark.id %> ">
		<br>
		<% end %>

	
	<h4>Create New Landmark:</h4>
  	<label> Name: </label>
  	<input type="text" id="new_landmark" name="landmark[name]" >

  	<label> Year: </label>
  	<input type="text" id="new_landmark_name" name="landmark[year_completed]" >
  		
  	<br>


<h3>Title: Add an existing title, or enter a new one </h3>
	<% Title.all.each do |title| %>
		<label><%= title.name %></label>
		<input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]">
		
		<% end %>

	<label>New Title:</label>
  	<input type="text" id="new_title" name="title[name]" >
	<br>

<input type="submit" value="Create New Figure">
</form>
